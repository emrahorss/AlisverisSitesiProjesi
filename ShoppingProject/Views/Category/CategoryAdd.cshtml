@model ShoppingProject.Data.Models.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color:#141111"><font face="Arial" color="#FF7F00" size="4">&nbsp; Kategori Ekleme Sayfası</font></div>
<br />
@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{
    @Html.Label("Kategori İsmi")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.CategoryName,"", new { @style="color:red"})
    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" style="background-color: #141111; color: #FFFFFF">Kaydet</button>
}